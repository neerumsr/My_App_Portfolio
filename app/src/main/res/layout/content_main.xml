<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.pranavi.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button_spotify"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#fb9a1b"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:onClick="buttonClickEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/button_scores"
        android:background="#fb9a1b"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_spotify"
        android:layout_alignLeft="@+id/button_spotify"
        android:layout_alignStart="@+id/button_spotify"
        android:onClick="buttonClickEvent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/button_library"
        android:background="#fb9a1b"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_scores"
        android:layout_alignLeft="@+id/button_scores"
        android:layout_alignStart="@+id/button_scores"
        android:onClick="buttonClickEvent" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button_build"
        android:background="#fb9a1b"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_library"
        android:layout_alignLeft="@+id/button_library"
        android:layout_alignStart="@+id/button_library"
        android:onClick="buttonClickEvent" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/button_xyz"
        android:background="#fb9a1b"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_build"
        android:layout_alignLeft="@+id/button_build"
        android:layout_alignStart="@+id/button_build"
        android:onClick="buttonClickEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button_capstone"
        android:background="#c0241c"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_xyz"
        android:layout_alignLeft="@+id/button_xyz"
        android:layout_alignStart="@+id/button_xyz"
        android:onClick="buttonClickEvent" />


</RelativeLayout>
